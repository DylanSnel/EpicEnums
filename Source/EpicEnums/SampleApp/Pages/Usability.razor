@page "/features"
@using SampleApp.NotVegetables;
<PageTitle>Features</PageTitle>

<h1>How to use</h1>

@foreach (var fruit in Fruits.Values)
{
    <p>@fruit</p>
}

@foreach (FruitsEnum fruit in Fruits.Values)
{
    <p>@fruit</p>
}

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>afd

@code {
    private int currentCount = 0;
    private FruitsEnum fruit = FruitsEnum.DragonFruit; 

    private void IncrementCount()
    {
        currentCount++;
        fruit = (FruitsEnum) (currentCount % Fruits.Values.Count());

    }
}
